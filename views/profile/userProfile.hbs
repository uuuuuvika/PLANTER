    <label for="myPlants">Plant:</label> 
    <select name="myPlants" id="myPlants" aria-label="Choose your plant">
      <option selected></option>
        {{#each allPlants}}
        <option value="{{_id}}">{{plantType}}</option>
        {{/each}}
        
    </select>  
    <input type="submit" value="Submit">
</form>

